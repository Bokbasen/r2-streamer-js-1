{
  "name": "r2-streamer-js",
  "version": "0.0.1-alpha20",
  "description": "Readium 2 'streamer' for NodeJS (TypeScript, ECMAScript 2015 / ES6)",
  "keywords": [
    "readium",
    "readium2",
    "streamer",
    "EPUB",
    "TypeScript",
    "JavaScript",
    "ES5",
    "ES6",
    "ECMAScript 2015",
    "ECMAScript 6",
    "ES7",
    "ECMAScript 2016",
    "ECMAScript 7"
  ],
  "engines": {
    "node": ">=6",
    "npm": ">=3",
    "yarn": ">=0.23"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/edrlab/r2-streamer-js.git"
  },
  "author": {
    "name": "EDRLab",
    "organization": "EDRLab",
    "url": "http://github.com/edrlab/"
  },
  "license": "BSD-3-Clause",
  "licenses": [
    {
      "type": "BSD-3-Clause",
      "url": "http://opensource.org/licenses/BSD-3-Clause"
    }
  ],
  "bugs": {
    "url": "https://github.com/edrlab/r2-streamer-js/issues"
  },
  "homepage": "https://github.com/edrlab/r2-streamer-js",
  "dependencies": {
    "css2json": "latest",
    "debug": "latest",
    "express": "latest",
    "filehound": "latest",
    "image-size": "latest",
    "json-markup": "latest",
    "mime-types": "latest",
    "moment": "latest",
    "morgan": "latest",
    "node-stream-zip": "latest",
    "reflect-metadata": "latest",
    "request": "latest",
    "request-promise-native": "latest",
    "slugify": "latest",
    "ta-json": "latest",
    "tmp": "latest",
    "unzipper": "latest",
    "xmldom": "latest",
    "xpath": "latest",
    "yauzl": "latest"
  },
  "devDependencies": {
    "@types/debug": "latest",
    "@types/express": "latest",
    "@types/image-size": "latest",
    "@types/mime-types": "latest",
    "@types/morgan": "latest",
    "@types/request": "latest",
    "@types/request-promise-native": "latest",
    "@types/tmp": "latest",
    "@types/xmldom": "latest",
    "ava": "latest",
    "cross-env": "latest",
    "eclint": "latest",
    "mkdirp": "latest",
    "rimraf": "latest",
    "tslint": "latest",
    "tslint-language-service": "latest",
    "typescript": "latest"
  },
  "main": "dist/es6-es2015/src/index.js",
  "types": "dist/es6-es2015/src/index.d.js",
  "bin": {
    "r2-streamer-js-cli": "dist/es6-es2015/src/cli.js",
    "r2-streamer-js-server": "dist/es6-es2015/src/server-cli.js"
  },
  "files": [
    "LICENCE",
    "README.md",
    "dist/**/*"
  ],
  "scripts": {
    "start": "npm run server-debug .",
    "prepare_": "npm run build:all && npm test",
    "prepublish_": "npm run prepare_",
    "prenow": "npm run clean && npm run transpile:typescript:es8-es2017",
    "now": "rm -rf ./now && mkdir now && cp yarn.lock ./now && mkdir now/reader-NYPL && mkdir now/reader-HADRIEN && cp -r dist/ now/ && cp -r reader-NYPL/ now/reader-NYPL/ && cp -r reader-HADRIEN/ now/reader-HADRIEN/ && cp *.epub now/ && cp package-now.json now/ && cd now/ && mv package-now.json package.json && now && cd ..",
    "prebuild": "npm run lint",
    "build": "npm run transpile:typescript",
    "prebuild:all": "npm run lint",
    "build:all": "npm run transpile:typescript:all",
    "prebuild:es5": "npm run lint && npm run clean",
    "build:es5": "npm run transpile:typescript:es5",
    "prebuild:es6-es2015": "npm run lint && npm run clean",
    "build:es6-es2015": "npm run transpile:typescript:es6-es2015",
    "prebuild:es7-es2016": "npm run lint && npm run clean",
    "build:es7-es2016": "npm run transpile:typescript:es7-es2016",
    "prebuild:es8-es2017": "npm run lint && npm run clean",
    "build:es8-es2017": "npm run transpile:typescript:es8-es2017",
    "clean": "rimraf ./dist && rimraf ./now && mkdirp ./dist",
    "lint": "npm run lint:all && npm run lint:typescript:full",
    "lint:all": "eclint check \"**/*\" \"[!].git/**/*\" \"[!]node_modules/**/*\" \"[!]dist/**/*\" \"[!]reader*/**/*\" \"[!]now/**/*\" \"[!].vscode/**/*\" \"[!]**/.DS_Store\" \"[!]**/*.epub\" \"[!]**/*.cbz\"  \"[!]**/*.jpg\"  \"[!]**/*.jpeg\"  \"[!]**/*.png\"",
    "lint:typescript": "tslint -c \"./tslint.json\" \"./src/**/*.ts\" \"./test/**/*.ts\"",
    "lint:typescript:full": "tslint --type-check --project \"./tsconfig.json\" -c \"./tslint.json\" \"./src/**/*.ts\" \"./test/**/*.ts\"",
    "pretranspile:typescript": "npm run clean",
    "transpile:typescript": "tsc -p \"./tsconfig.json\"",
    "pretranspile:typescript:all": "npm run clean",
    "transpile:typescript:all": "npm run transpile:typescript:es5 && npm run transpile:typescript:es6-es2015 && transpile:typescript:es7-es2016 && transpile:typescript:es8-es2017",
    "transpile:typescript:es5": "tsc -p \"./tsconfigs/tsconfig-es5-all.json\"",
    "transpile:typescript:es6-es2015": "tsc -p \"./tsconfigs/tsconfig-es6-es2015-all.json\"",
    "transpile:typescript:es7-es2016": "tsc -p \"./tsconfigs/tsconfig-es7-es2016-all.json\"",
    "transpile:typescript:es8-es2017": "tsc -p \"./tsconfigs/tsconfig-es8-es2017-all.json\"",
    "transpile:typescript:single": "node typescript.js",
    "test": "ava --verbose \"./dist/es8-es2017/test/test.js\"",
    "cli": "node \"./dist/es8-es2017/src/cli.js\"",
    "cli-debug": "cross-env DEBUG=r2:* npm run cli",
    "cli-debug-x": "cross-env DEBUG=* npm run cli",
    "server": "node \"./dist/es8-es2017/src/server-cli.js\"",
    "server-debug": "cross-env DEBUG=r2:* npm run server",
    "server-debug-x": "cross-env DEBUG=* npm run server",
    "heroku-prebuild": "echo \"heroku-prebuild\"",
    "heroku-postbuild": "echo \"heroku-postbuild\" && npm run clean && npm run transpile:typescript:es8-es2017"
  },
  "importSort": {
    ".ts": {
      "parser": "typescript",
      "style": "module"
    }
  }
}
