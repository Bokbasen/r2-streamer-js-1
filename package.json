{
  "name": "r2-streamer-js",
  "version": "0.0.1-alpha11",
  "description": "Readium 2 'streamer' for NodeJS (TypeScript, ECMAScript 2015 / ES6)",
  "keywords": [
    "readium",
    "readium2",
    "streamer",
    "EPUB",
    "TypeScript",
    "JavaScript",
    "ES6",
    "ECMAScript 2015",
    "ECMAScript 6"
  ],
  "engines": {
    "node": ">=6",
    "npm": ">=3",
    "yarn": ">= 0.23"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/edrlab/r2-streamer-js.git"
  },
  "author": {
    "name": "EDRLab",
    "organization": "EDRLab",
    "url": "http://github.com/edrlab/"
  },
  "license": "BSD-3-Clause",
  "licenses": [
    {
      "type": "BSD-3-Clause",
      "url": "http://opensource.org/licenses/BSD-3-Clause"
    }
  ],
  "bugs": {
    "url": "https://github.com/edrlab/r2-streamer-js/issues"
  },
  "homepage": "https://github.com/edrlab/r2-streamer-js",
  "dependencies": {
    "css2json": "latest",
    "express": "latest",
    "json-markup": "latest",
    "mime-types": "latest",
    "moment": "latest",
    "morgan": "latest",
    "node-stream-zip": "latest",
    "reflect-metadata": "latest",
    "slugify": "latest",
    "ta-json": "latest",
    "xmldom": "latest",
    "xpath": "latest"
  },
  "devDependencies": {
    "@types/express": "latest",
    "@types/morgan": "latest",
    "@types/xmldom": "latest",
    "ava": "latest",
    "eclint": "latest",
    "mkdirp": "latest",
    "rimraf": "latest",
    "tslint": "latest",
    "tslint-language-service": "latest",
    "typescript": "latest"
  },
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.js",
  "bin": {
    "r2-streamer-js-cli": "dist/src/cli.js",
    "r2-streamer-js-server": "dist/src/server-cli.js"
  },
  "files": [
    "LICENCE",
    "README.md",
    "dist/**/*"
  ],
  "scripts": {
    "prepublish": "yarn run build && yarn test",
    "now": "rm -rf ./now && mkdir now && mkdir now/reader-NYPL && mkdir now/reader-HADRIEN && cp -r dist/ now/ && cp -r reader-NYPL/ now/reader-NYPL/ && cp -r reader-HADRIEN/ now/reader-HADRIEN/ && cp *.epub now/ && cp package-now.json now/ && cd now/ && mv package-now.json package.json && now && cd ..",
    "start": "yarn run build",
    "build": "yarn run clean && yarn run lint:all && yarn run lint:typescript && yarn run transpile:typescript",
    "clean": "rimraf ./dist && rimraf ./now && mkdirp ./dist",
    "lint:all": "eclint check \"**/*\" \"[!].git/**/*\" \"[!]node_modules/**/*\" \"[!]dist/**/*\" \"[!]reader*/**/*\" \"[!]now/**/*\" \"[!].vscode/**/*\" \"[!]**/.DS_Store\" \"[!]**/*.epub\" \"[!]**/*.cbz\"  \"[!]**/*.jpg\"  \"[!]**/*.jpeg\"  \"[!]**/*.png\"",
    "lint:typescript": "tslint --type-check --project \"./tsconfig.json\" -c \"./tslint.json\" \"./src/**/*.ts\" \"./test/**/*.ts\"",
    "transpile:typescript": "tsc -p \"./tsconfig.json\"",
    "test": "ava --verbose \"./dist/test/test.js\"",
    "cli": "node \"./dist/src/cli.js\"",
    "server": "node \"./dist/src/server-cli.js\""
  },
  "importSort": {
    ".ts": {
      "parser": "typescript",
      "style": "module"
    }
  }
}
